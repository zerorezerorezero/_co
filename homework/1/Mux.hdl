/** 
 * Multiplexor:
 * if (sel = 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // 實現多路選擇器
    Not(in=sel, out=notSel);
    And(a=a, b=sel, out=and1);
    And(a=b, b=notSel, out=and2);
    Or(a=and1, b=and2, out=out);
}